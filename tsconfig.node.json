{
	"compilerOptions": {
		// Projects
		"composite": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
		// Modules
		"module": "ESNext",
		"moduleResolution": "bundler",
		// Emit
		"noEmit": true,
		// Interop Constraints
		"allowSyntheticDefaultImports": true,
		// Type Checking
		"strict": true,
		// Completeness
		"skipLibCheck": true
	},
	"include": ["vite.config.ts"]
}
